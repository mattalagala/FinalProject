    <!-- Page Features -->

    <div class="row text-center justify-content-center">
      {{#each lists}}
      <div class="col-4">
        {{!-- col-lg-2 col-md-2 mb-4 --}}

        <div class="card h-100">
          <img class="card-img-top" src="/uploads/{{this.category_picture}}" alt="">
          <div class="card-body d-flex flex-column mt-auto">
            <h4 class="card-title">{{this.category_name}}</h4>
            <h6 id="card-description-title">Group Name</h2>
              <p class="card-text">{{this.category_team_name}}</p>
              <h6 id="card-description-title">Description</h2>
                <p class="card-text">{{this.category_description}}</p>
                <h6 id="card-description-title">Languages Used</h2>
                  <p class="card-text">{{this.category_languages}}</p>
                  <h6 id="card-description-title">Display UUID <-- //For Testing</h2>
                      <p class="card-text">{{this.category_id}}</p>

          </div>
          <div class="card-footer">
            <a href="/category/{{this.category_id}}" class="btn btn-primary" id="checkout-btn">View Details</a>
          </div>
        </div>

      </div>
      {{/each}}
    </div>
